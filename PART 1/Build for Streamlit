# app.py
import streamlit as st
import pandas as pd
import matplotlib.pyplot as plt
import seaborn as sns
from wordcloud import WordCloud

# Load data
@st.cache_data
def load_data():
    df = pd.read_csv("metadata.csv", low_memory=False)
    df['publish_time'] = pd.to_datetime(df['publish_time'], errors='coerce')
    df = df.dropna(subset=['publish_time', 'title'])
    df['year'] = df['publish_time'].dt.year
    df['abstract_word_count'] = df['abstract'].fillna('').apply(lambda x: len(x.split()))
    return df

df = load_data()

# App layout
st.title("CORD-19 Data Explorer")
st.write("Simple exploration of COVID-19 research metadata")

# Year filter
year_range = st.slider("Select year range:", 2019, 2023, (2020, 2021))
filtered_df = df[(df['year'] >= year_range[0]) & (df['year'] <= year_range[1])]

# Visualization 1: Publications per year
st.subheader("📊 Publications by Year")
year_counts = filtered_df['year'].value_counts().sort_index()
fig, ax = plt.subplots()
ax.bar(year_counts.index, year_counts.values)
st.pyplot(fig)

# Visualization 2: Top journals
st.subheader("🏢 Top Journals")
top_journals = filtered_df['journal'].value_counts().head(10)
fig, ax = plt.subplots()
sns.barplot(y=top_journals.index, x=top_journals.values, ax=ax, palette="mako")
st.pyplot(fig)

# Visualization 3: Word cloud
st.subheader("☁️ Word Cloud of Paper Titles")
all_titles = ' '.join(filtered_df['title'].dropna())
wordcloud = WordCloud(width=800, height=400, background_color='white').generate(all_titles)
fig, ax = plt.subplots(figsize=(10, 5))
ax.imshow(wordcloud, interpolation='bilinear')
ax.axis("off")
st.pyplot(fig)

# Show data
st.subheader("🔍 Sample of Filtered Data")
st.dataframe(filtered_df[['title', 'journal', 'publish_time']].head(10))
